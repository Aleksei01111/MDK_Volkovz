<Window x:Class="MDK_Volkov.Practice_4.WinStartMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MDK_Volkov.Practice_4"
        mc:Ignorable="d"
        Title="WinStartMain" Height="750" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid x:Name="Menu" Background="White" MouseLeave="CloseMenu_MouseLeave" Margin="-180 0 10 0"
              Width="200" HorizontalAlignment="Left">
            <StackPanel>
                <TextBlock>Меню</TextBlock>
                <Button Click="ButtonBase_OnClick" Style="{StaticResource Button}">Домашняя страница</Button>
            </StackPanel>
        </Grid>
        
        <Button Grid.Column="1" Style="{StaticResource Button}" Click="OpenMenu_OnClick"
                MaxWidth="100" VerticalAlignment="Top" Margin="0 10">Меню</Button>
        
        <Frame NavigationUIVisibility="Hidden" Grid.Column="2" x:Name="MainFrame"/>
    </Grid>
</Window>
