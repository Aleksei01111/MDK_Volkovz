<Window x:Class="MDK_Volkov.WinRegister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDK_Volkov"
        mc:Ignorable="d"
        Title="WinRegister" Height="500" Width="300">
    <StackPanel Margin="20">
        <TextBlock Style="{StaticResource Head2}" HorizontalAlignment="Center">Регистрация</TextBlock>

        <TextBlock Style="{StaticResource Text}" Foreground="Black">Введите имя</TextBlock>
        <TextBox Style="{StaticResource Text}" Foreground="Black" x:Name="NameTxb"/>
        
        <TextBlock>Введите пароль</TextBlock>
        <PasswordBox Style="{StaticResource Text}" Foreground="Black" x:Name="PasswordPsb"/>
        
        <TextBlock>Повторите пароль</TextBlock>
        <PasswordBox Style="{StaticResource Text}" Foreground="Black" x:Name="ReTryPasswordPsb"/>

        <Button Click="RegisterBtn_Click" Style="{StaticResource Button}" Background="Gray" HorizontalAlignment="Left" Margin='0, 10, 0, 0'>Ок</Button>
    </StackPanel>
</Window>
